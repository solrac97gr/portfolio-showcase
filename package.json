{
  "name": "portfolio-showcase",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
